<!DOCTYPE html>
<html>
<head>
  <title>Tumbling</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
    <ul>
      <li class="category"><%= link_to 'Tumbling', root_path %></li>
      <li><%= link_to 'Posts', root_path %></li>
      <li><%= link_to 'About', about_path %></li>
    </ul>

    <% if !user_signed_in? %>
      <p class="sign_in"><%= link_to "Login", new_user_session_path %></p>
    <% end %>
  </div>

  <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
        </p>Posts</p>
      <% elsif current_page?(about_path) %>
        <p>My Site</p>
      <% else %>
        <%= link_to 'Back to Home', root_path %>
      <% end %>

      <div class="buttons">
        <% if user_signed_in? %>
          <button class="button"><%= link_to 'New Post', new_post_path %></button>
          <button class="button"><%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: "Logout?" } %></button>
        <% end %>
      </div>
    </div>

    <%= yield %>
  </div>

</body>
</html>
